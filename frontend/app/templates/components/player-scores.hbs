{{#if scores.model.length}}
  <div class="blue-round player-scores">
    <h3>Recent Scores</h3>
    <table>
      <thead>
        <th>Snippet</th>
        <th>WPM</th>
        <th>Accuracy</th>
      </thead>
      <tbody>
        {{#each scores.recent as |score|}}
          <tr>
            <td>{{#link-to 'snippet.index' score.snippet.id}}{{score.snippet.id}}{{/link-to}}</td>
            <td>{{score.wpm}}</td>
            <td>{{score.accuracy}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{/if}}