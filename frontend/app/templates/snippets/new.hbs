<div class="container">
  <nav class="blue-round">
    <ul class="nav-options">
      <li>{{#link-to 'snippets.index'}}Index{{/link-to}}</li>
    </ul>
  </nav>

  <h1>New snippet</h1>

  <div class="new_snippet">
    <div class="field">
      <label>
        Category
        <select {{action 'categoryChanged' on='change'}}>
          <option>Select a category...</option>
          {{#each categories.model key="@index" as |category|}}
            <option value="{{category.id}}" selected={{is-equal category.id model.category_id}}>
              {{category.name}}
            </option>
          {{/each}}
        </select>
      </label>
    </div>

    <div class="field">
      {{textarea value=model.full_text rows=20 class='snippet-editor' name='snippet[full_text]'}}
    </div>
    <div class="actions">
      <button class="btn btn-primary" disabled={{snippetInvalid}}
        {{action 'submitAction' target="controller"}}>Create Snippet
      </button>
    </div>
  </div>
</div>