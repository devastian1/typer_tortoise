<h1><%= @user.name %></h1>
<hr>

<% if @scores_by_category.present? %>
  <h2>Snippet Scores:</h2>
<% end %>

<% @scores_by_category.each do |category, scores| %>
  <div class="blue-round user-scores">
    <h2>Category: <%= category %></h2>

    <table class="thin-border scores">
      <tr>
        <th>Snippet ID</th>
        <th>WPM</th>
        <th>Accuracy</th>
      </tr>

    <% scores.each do |score| %>
      <tr>
        <td><%= link_to score.snippet_id, "/snippets/#{score.snippet_id}" %></td>
        <td><%= score.wpm %></td>
        <td><%= score.accuracy %>%</td>
      </tr>  
    <% end %>
    </table>
  </div>
<% end %>
