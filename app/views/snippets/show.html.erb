<%= render 'nav' %>

<p id="notice"><%= notice %></p>

<h1>Snippet <%= @snippet.id %></h1>

<h2>From the category "<strong><%= @snippet.category.name %></strong>"</h2>
<pre><%= @snippet.full_text %></pre>

<% if @snippet.scores.length > 0 %>
<h1>User Scores:</h1>
<div class="blue-round user-scores">
  <table class="thin-border">
    <tr>
      <th>Username</th>
      <th>WPM</th>
      <th>Accuracy</th>
    </tr>

  <% @snippet.scores.each do |score| %>
    <tr>
      <td><%= link_to score.user.name, user_path(score.user_id) %></td>
      <td><%= score.wpm %></td>
      <td><%= score.accuracy %>%</td>
    </tr>
  <% end %>
  </table>
</div>
<% end %>
