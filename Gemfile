source 'https://rubygems.org'

gem 'rails', '3.2.14'

gem 'omniauth-twitter'
gem 'kaminari'
gem 'thin'
gem 'jquery-rails'

group :development, :test do
  gem 'jasmine'
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'capybara'
end

group :test do
  gem 'factory_girl_rails'
  gem 'spork'
  gem 'win32-process', :platforms => :mswin
end

group :production do
  gem 'pg'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'bootstrap-sass-rails', '~> 2.3.0'
end
